<HERON>
  <Case name="nuclear_lc">
    <mode>sweep</mode>
    <parallel>
      <runinfo>
        <expectedTime>72:0:0</expectedTime>
        <clusterParameters>-P re_gen</clusterParameters>
        <memory>2gb</memory>
      </runinfo>
    </parallel>
    <!--<debug></debug>-->
    <verbosity>debug</verbosity>
    <num_arma_samples>3</num_arma_samples>
    <time_discretization>
      <time_variable>hour</time_variable>
      <year_variable>Year</year_variable>
      <end_time>23</end_time>
      <num_steps>24</num_steps>
    </time_discretization>
    <economics>
      <ProjectTime>20</ProjectTime>
      <DiscountRate>0.12</DiscountRate>
      <tax>0.0</tax>
      <inflation>0.02</inflation>
      <verbosity>50</verbosity>
      <EconMetrics>
        <LC/> 
      </EconMetrics>
    </economics>
    <dispatcher>
      <pyomo>ipopt</pyomo>
    </dispatcher>
  </Case>

  <Components>
  
  <!-- PRODUCTION Components -->
    <Component name='npp'>
      <produces resource="electricity" dispatch="independent">
        <capacity resource="electricity">
          <sweep_values>50,300,1000,5000,10000,20000</sweep_values> <!-- kW-e-->
        </capacity>
      </produces>
      <economics>
        <lifetime>60</lifetime>
        <CashFlow name="reactor_capex" type="one-time" taxable="True" inflation="None" mult_target="False">
          <driver>
            <variable>npp_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-4572</fixed_value> <!-- $/kW-e-->
          </reference_price>
          <reference_driver>
            <fixed_value>1</fixed_value>
          </reference_driver>
        </CashFlow>
        <CashFlow name="reactor_om" type="repeating" period="hour" taxable="True" inflation="None" mult_target="False">
          <driver>
            <activity>electricity</activity>
          </driver>
          <reference_price>
            <fixed_value>-10520</fixed_value> <!-- $/kW-e -->
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

    <Component name='grid'>
      <produces resource="electricity" dispatch="independent">
        <capacity resource="electricity">
          <fixed_value>1e200</fixed_value> <!-- Infinite-->
        </capacity>
      </produces>
      <economics>
        <lifetime>10</lifetime>
        <CashFlow name="e_needs" type="repeating" taxable="True" inflation="None" mult_target="False">
          <driver>
            <activity>electricity</activity>
            <multiplier>-1</multiplier>
          </driver>
          <reference_price>
            <ARMA variable='price'>price</ARMA> <!-- $/MWh-->
            <multiplier>0.001</multiplier> <!-- conversion to $/kWh-->
          </reference_price>
        </CashFlow>
      </economics>
    </Component>


  <!-- DEMAND Components-->

    <Component name='industry_demand_thermal'>
      <demands resource='electricity' dispatch='fixed'>
        <capacity>
          <fixed_value>-186.45</fixed_value> <!-- 565 kW-th to 186.45kW-e assuming 0.33 efficiency-->
        </capacity>
      </demands>
      <economics>
        <lifetime>30</lifetime>
      </economics>
    </Component>

    <Component name='industry_demand_electricity'>
      <demands resource='electricity' dispatch='fixed'>
        <capacity>
          <fixed_value>-357</fixed_value> <!-- kW-e-->
        </capacity>
      </demands>
      <economics>
        <lifetime>30</lifetime>
      </economics>
    </Component>

    <Component name='desalination'>
      <produces resource='water' dispatch='independent'>
        <consumes>electricity</consumes>
        <capacity resource='water'>
          <sweep_values>100,10000,30000</sweep_values> <!--m3/h-->
        </capacity>
        <transfer>
          <linear>
            <rate resource='electricity'>-3.25</rate> <!-- kWh-e/m3-->
            <rate resource="water">1</rate> <!-- m3/h-->
          </linear>
        </transfer>
      </produces>
      <economics>
        <lifetime>30</lifetime>
        <CashFlow name="desalination_fom" period="year" type="repeating" taxable="True" inflation="None" mult_target="False">
          <driver>
            <variable>desalination_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-478782</fixed_value> <!-- $, corresponds to alpha, cf desalination regression spreadsheet-->
          </reference_price>
          <reference_driver>
            <fixed_value>3168</fixed_value> <!--m3/h-->
          </reference_driver>
          <scaling_factor_x>
            <fixed_value>0.4517</fixed_value>
          </scaling_factor_x>
        </CashFlow>
        <CashFlow name="desalination_capex" type="one-time" taxable="True" inflation="None" mult_target="False">
          <driver>
            <variable>desalination_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-1628223</fixed_value> <!-- $-->
          </reference_price>
          <reference_driver>
            <fixed_value>4196</fixed_value> <!--m3/h-->
          </reference_driver>
          <scaling_factor_x>
            <fixed_value>0.48</fixed_value>
          </scaling_factor_x>
        </CashFlow>
        <CashFlow name='water_sales' type='repeating' period="hour" taxable='True' inflation='None' mult_target='False'>
          <driver>
            <activity>water</activity>
          </driver>
          <reference_price>
            <levelized_cost/>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

  </Components>

  <DataGenerators>
    <ARMA name='price' variable="price">../train/Output_kenya_2021/arma.pk</ARMA> 
  </DataGenerators>
</HERON>

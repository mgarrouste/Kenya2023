<HERON>
  <Case name="s_d_g">
    <mode>sweep</mode>
    <parallel>
      <runinfo>
        <expectedTime>72:0:0</expectedTime>
        <clusterParameters>-P re_gen</clusterParameters>
        <memory>2gb</memory>
      </runinfo>
    </parallel>
    <data_handling>
      <inner_to_outer>csv</inner_to_outer>
    </data_handling>
    <verbosity>debug</verbosity>
    <num_arma_samples>2</num_arma_samples>
    <time_discretization>
      <time_variable>hour</time_variable>
      <year_variable>Year</year_variable>
      <end_time>23</end_time>
      <num_steps>24</num_steps>
    </time_discretization>
    <economics>
      <ProjectTime>60</ProjectTime>
      <DiscountRate>0.12</DiscountRate>
      <tax>0.0</tax>
      <inflation>0.02</inflation>
      <verbosity>0</verbosity>
      <EconMetrics>
        <LC /> 
      </EconMetrics>
    </economics>
    <dispatcher>
      <pyomo>
        <solver>ipopt</solver>
      </pyomo>
    </dispatcher>
  </Case>

  <Components>
    
    <Component name="solar">
      <produces resource="electricity" dispatch="independent">
        <capacity resource='electricity'>
          <sweep_values>60,120,180,240,300,360,420,480,540,600,660,720</sweep_values> 
        </capacity>
        <capacity_factor>
          <ARMA variable="solar">arma_kenya</ARMA>
        </capacity_factor>
      </produces>
      <economics>
        <lifetime>30</lifetime>
        <CashFlow name="solarCAPEX" type="one-time" taxable="False" inflation="None" mult_target="False">
          <driver>
            <variable>solar_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-1140000</fixed_value> 
          </reference_price>
          <reference_driver>
            <fixed_value>1</fixed_value>
          </reference_driver>
          <depreciate>5</depreciate>
        </CashFlow>
        <CashFlow name="solarOM" type="repeating" period="year" taxable="False" inflation="None" mult_target="False">
          <driver>
            <activity>electricity</activity>
          </driver>
          <reference_price>
            <fixed_value>-23000</fixed_value>
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

    <Component name="grid">
      <produces resource="electricity" dispatch="independent">
        <capacity resource="electricity">
          <fixed_value>-1e200</fixed_value> 
        </capacity>
      </produces>
      <economics>
        <lifetime>60</lifetime>
        <CashFlow name="e_sales" type="repeating" taxable="True" inflation="None" mult_target="False">
          <driver>
            <activity>electricity</activity>
            <multiplier>-1</multiplier>
          </driver>
          <reference_price>
            <ARMA variable="price">arma_kenya</ARMA> 
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

    <Component name="industry_demand_thermal">
      <demands resource="electricity" dispatch="fixed">
        <capacity>
          <fixed_value>-3.71</fixed_value> 
        </capacity>
      </demands>
      <economics>
        <lifetime>30</lifetime>
      </economics>
    </Component>

    <Component name="industry_demand_electricity">
      <demands resource="electricity" dispatch="fixed">
        <capacity>
          <fixed_value>-7.02</fixed_value> 
        </capacity>
      </demands>
      <economics>
        <lifetime>30</lifetime>
      </economics>
    </Component>

    <Component name="desalination">
      <produces resource="water" dispatch="independent">
        <consumes>electricity</consumes>
        <capacity resource="electricity">
          <sweep_values>-1,-60,-120,-180,-240,-300,-360,-420,-480,-540,-600,-660,-720</sweep_values> <!-- MW-->
        </capacity>
        <transfer>
          <linear>
            <rate resource="electricity">-0.00325</rate> 
            <rate resource="water">1</rate> 
          </linear>
        </transfer>
      </produces>
      <economics>
        <lifetime>30</lifetime>
        <CashFlow name="desalination_fom" period="year" type="repeating" taxable="True" inflation="None" mult_target="False">
          <driver>
            <variable>desalination_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-478782</fixed_value> 
          </reference_price>
          <reference_driver>
            <fixed_value>3168</fixed_value> 
          </reference_driver>
          <scaling_factor_x>
            <fixed_value>0.4517</fixed_value>
          </scaling_factor_x>
        </CashFlow>
        <CashFlow name="desalination_capex" type="one-time" taxable="True" inflation="None" mult_target="False">
          <driver>
            <variable>desalination_capacity</variable>
          </driver>
          <reference_price>
            <fixed_value>-1628223</fixed_value> 
          </reference_price>
          <reference_driver>
            <fixed_value>4196</fixed_value> 
          </reference_driver>
          <scaling_factor_x>
            <fixed_value>0.48</fixed_value>
          </scaling_factor_x>
        </CashFlow>
        <CashFlow name="water_sales" type="repeating" period="hour" taxable="True" inflation="None" mult_target="False">
          <driver>
            <activity>water</activity>
          </driver>
          <reference_price>
            <levelized_cost />
          </reference_price>
        </CashFlow>
      </economics>
    </Component>

  </Components>

  <DataGenerators>
    <ARMA name="arma_kenya" variable="price,solar">../../train/Output_kenya_solar_price_2021/arma.pk</ARMA> 
  </DataGenerators>
</HERON>
